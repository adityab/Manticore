.title-container
    display: block;
    max-width: 400px;
    padding: 10px 10px;
    height: 50px;

.title-editor
    float: left;
    font-size: 16px;
    line-height: 20px;
    padding: 5px;
    border: none;
    outline: none;
    text-overflow: ellipsis;
    resize: horizontal;
    width: 100%;
    text-decoration: underline;
    background-color: white;
    &:hover, &:focus
        background-color: #eeeeee;
